    <portlet>
        <portlet-name>SimpleJspPortlet</portlet-name>
        <display-name>SimpleJspPortlet</display-name>
        <portlet-class>org.springframework.web.portlet.DispatcherPortlet</portlet-class>
        <init-param>
            <name>contextConfigLocation</name>
            <value>/WEB-INF/context/portlet/simpleJspPortletContext.xml</value>
        </init-param>
        <expiration-cache>300</expiration-cache><!-- 5 min -->
        <supports>
            <mime-type>text/html</mime-type>
            <portlet-mode>view</portlet-mode>
        </supports>
        <portlet-info>
            <title>SimpleJspPortlet</title>
        </portlet-info>
        <portlet-preferences>
            <!--
             | Multi-valued preference specifying the JSP pages that may be
             | accessed within the portlet in any WindowState, any PortletMode.
             | The first page listed is the starting (default) page.  The
             | complete path will be built by concatenating with a prefix and
             | suffix as follows:  '/WEB-INF/jsp/{preference.value}.jsp' (so the
             | following examples each work well):
             |   - my-portlet
             |   - my-portlet/index
             +-->
            <preference>
                <name>SimpleJspPortletController.jspName</name>
                <value>simple-jsp-instructions</value>
            </preference>
            <!--
             | Multi-valued preference specifying JSP pages that may be accessed
             | within the portlet (in addition to those listed for
             | SimpleJspPortletController.jspName) in MAXIMIZED WindowState only.
             +-->
            <preference>
                <name>SimpleJspPortletController.jspName.MAXIMIZED</name>
                <value>simple-jsp-instructions</value>
            </preference>
            <!--
             | Security roles to test the user for as a convenience to allow the JSP to do basic security conditions
             | such as <c:if test=${isFaculty}></c:if> for role-sensitive menu operations or other needs.  Each role
             | listed here is checked and an "is"+roleName is added to the model sent to the JSP.  Each role
             | specified here must ALSO be specified in a <security-role-ref> element in the portlet.xml.
             +-->
            <preference>
                <name>SimpleJspPortletController.securityRolesToTest</name>
                <value>Students</value>
                <value>Faculty</value>
                <value>Staff</value>
            </preference>
        </portlet-preferences>

        <!-- The role-name (the internal name used by the portlet) should not have spaces in it because
             the role-name is used to add isRoleName attributes to the model for use by the JSP -->

        <security-role-ref>
            <role-name>Faculty</role-name>
            <role-link>Faculty</role-link>
        </security-role-ref>

        <security-role-ref>
            <role-name>Staff</role-name>
            <role-link>Staff</role-link>
        </security-role-ref>

        <security-role-ref>
            <role-name>Students</role-name>
            <role-link>Students</role-link>
        </security-role-ref>

    </portlet>

    <portlet>
        <portlet-name>PluggableDataJspPortlet</portlet-name>
        <display-name>PluggableDataJspPortlet</display-name>
        <portlet-class>org.springframework.web.portlet.DispatcherPortlet</portlet-class>
        <init-param>
            <name>contextConfigLocation</name>
            <value>/WEB-INF/context/portlet/pluggableDataJspPortletContext.xml,/WEB-INF/context/portlet/pluggableDataJspPortletContextOverrides.xml</value>
        </init-param>
        <expiration-cache>300</expiration-cache><!-- 5 min -->
        <supports>
            <mime-type>text/html</mime-type>
            <portlet-mode>view</portlet-mode>
        </supports>
        <portlet-info>
            <title>PluggableDataPortlet</title>
        </portlet-info>
        <portlet-preferences>
            <!-- Name of the JSP (without the .jsp extension) for the controller to invoke after obtaining data. -->
            <preference>
                <name>PluggableDataJspPortlet.Controller.jspName</name>
                <value>pluggableData-jsp-instructions</value>
            </preference>
            <!--
             | When pluggableDataJspPortletContext.xml is configured to have the controller invoke the
             | CachingConfigurableDataServiceImpl decorator service bean (default true), this is the ID of the
             | spring bean implementing PluggableDataDao for CachingConfigurableDataServiceImpl to invoke to
             | obtain the data.
             +-->
            <preference>
                <name>PluggableDataPortlet.Service.datasourceBeanName</name>
                <value></value>
            </preference>
            <!--
             | If set to true, serialize the data from the datasource and add as variable 'jsonData' to the JSP
             | page for use in the JSP page.  Note, this preference is optional.  The JSON data is also available
             | after the portlet is rendered via a resource URL request for use by jQuery or other Ajax javascript
             | libraries.
             +-->
            <preference>
                <name>PluggableDataJspPortlet.Controller.asJson</name>
                <value>false</value>
            </preference>
            <!--
             | When using CachingConfigurableDataServiceImpl (default), the name of the cache to cache the data fetched
             | from the PluggableDataDao bean implementation.  By default uses the cache named pluggableDataCache,
             | but you can define other cache names in ehcache.xml with whatever retention characteristics are needed
             | and configure each PluggableDataJspPortlet instance to use a different cache.  By default the cache
             | key includes the user's login ID (if configured) and the PluggableDataPortlet.Service.datasourceBeanName
             | so multiple PluggableDataJspPortlet instance could share the same cache if desired.
             +-->
            <preference>
                <name>PluggableDataPortlet.Service.cacheName</name>
                <value>pluggableDataCache</value>
            </preference>
            <!--
             | When using CachingConfigurableDataServiceImpl (default), determines whether the portlet's cache is
             | global or per-user (default).  See PluggableDataPortlet.Service.cacheName.
             +-->
            <preference>
                <name>PluggableDataPortlet.Service.datasourcePerUserCache</name>
                <value>true</value>
            </preference>
            <!--
             | Security roles to test the user for as a convenience to allow the JSP to do basic security conditions
             | such as <c:if test=${isFaculty}></c:if> for role-sensitive menu operations or other needs.  Each role
             | listed here is checked and an "is"+roleName is added to the model sent to the JSP.  Each role
             | specified here must ALSO be specified in a <security-role-ref> element in the portlet.xml.
             +-->
            <preference>
                <name>PluggableDataJspPortlet.Controller.securityRolesToTest</name>
                <value>Students</value>
                <value>Faculty</value>
                <value>Staff</value>
            </preference>
        </portlet-preferences>

        <!-- The role-name (the internal name used by the portlet) should not have spaces in it because
             the role-name is used to add isRoleName attributes to the model for use by the JSP -->

        <security-role-ref>
            <role-name>Faculty</role-name>
            <role-link>Faculty</role-link>
        </security-role-ref>

        <security-role-ref>
            <role-name>Staff</role-name>
            <role-link>Staff</role-link>
        </security-role-ref>

        <security-role-ref>
            <role-name>Students</role-name>
            <role-link>Students</role-link>
        </security-role-ref>

    </portlet>

    <portlet>
        <portlet-name>app-launcher</portlet-name>
        <display-name>App Launcher Portlet</display-name>
        <portlet-class>org.springframework.web.portlet.DispatcherPortlet</portlet-class>
        <init-param>
            <name>contextConfigLocation</name>
            <value>/WEB-INF/context/portlet/appLauncherPortletContext.xml</value>
        </init-param>
        <expiration-cache>300</expiration-cache><!-- 5 min -->
        <supports>
            <mime-type>text/html</mime-type>
            <portlet-mode>view</portlet-mode>
            <portlet-mode>config</portlet-mode>
        </supports>
        <portlet-info>
            <title>App Launcher Portlet</title>
        </portlet-info>
        <portlet-preferences>
            <!-- The JSP file used to render the launcher (as opposed to 
                 "launched") view.  Either:
                     - app/icon      // default; icon and text
                     - app/iconOnly  // text on hover
             -->
            <preference>
                <name>AppLauncherPortletController.jspViewName</name>
                <value>app/iconOnly</value>
            </preference>
            <preference>
                <name>AppLauncherPortletController.iconSizePixels</name>
                <value>200</value>
            </preference>
            <!-- Defined here for convenience in the PortletManager;  all of the
                 following must match the defaults in AppDefinition.java EXACTLY
                 or the isBlank() method will not work properly. -->
            <preference>
                <name>AppDefinition.appUrl</name>
            </preference>
            <!-- Display Strategy to use.  Possible values:
                     - iframe in detached mode
                     - newWindow
                 See AppDefinition.DisplayStrategy for authoritative list of values. -->
            <preference>
                <name>AppDefinition.displayStrategy</name>
                <value>iframe</value>
            </preference>
            <!-- URL of the icon.  You can use a string such as /jasig-widget-portlets/images/xxx.png
                 if the image is placed in the images folder of the portlet.  -->
            <preference>
                <name>AppDefinition.iconUrl</name>
            </preference>
            <preference>
                <name>AppDefinition.linkTitle</name>
            </preference>
            <preference>
                <name>AppDefinition.title</name>
            </preference>
            <preference>
                <name>AppDefinition.subtitle</name>
            </preference>
            <preference>
                <name>usePortalJsLibs</name>
                <value>true</value>
            </preference>
        </portlet-preferences>
    </portlet>

    <custom-portlet-mode>
        <description>Allows the portlet to render a preferences edit UI during publishing</description>
        <portlet-mode>config</portlet-mode>
    </custom-portlet-mode>

    <user-attribute>
        <description>Username attribute name for uPortal user</description>
        <name>user.login.id</name>
    </user-attribute>

